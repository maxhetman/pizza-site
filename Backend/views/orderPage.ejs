<% include common/header.ejs %>


<div class="page-wrapper container-fluid">
    <div class="left-panel">
        <div class="form-contaner">
           
            <h3>Контактні дані</h3>
            <div class="row">
                <div class="col-md-7">
                    <form id="user_info">
                        <div class="form-group name-group">
                            <label class="col-sm-2 control-label">Ім’я</label>
                            <div class="col-sm-10">
                                <input class="form-control" type="text" id="inputName" placeholder="Ім’я Фамілія">
                            </div>
                            <span class="name-help-block" style="display:none">
                                Введіть тільки власне ім’я, без цифр
                            </span>
                        </div>

                        <div class="form-group phone-group">
                            <label class="col-sm-2 control-label">Телефон</label>
                            <div class="col-sm-10">
                                <input class="form-control" type="text" id="inputPhone" placeholder="+380123456789">
                            </div>
                            <span class="phone-help-block" style="display:none">
                                Введіть номер телефону у форматі +380
                            </span>
                        </div>

                        <div class="form-group address-group">
                            <label class="col-sm-2 control-label">Адреса</label>
                            <div class="col-sm-10">
                                <input class="form-control" type="text" id="inputAddress" placeholder="Київ, вул. Спаська, 2">
                            </div>
                            <span class="address-help-block" style="display:none">
                                Введіть адресу доставки піци
                            </span>
                        </div>

                        <button type="submit" class="btn btn-warning button-next">
                                Далі
                                <i class="glyphicon glyphicon-chevron-right icon-white">
                                </i>
                        </button>


                    </form>
                </div>

                <div class="col-md-5">
                    <div class="order-info">
                        <h4>Інформація про замовлення</h4>
                        <b>Приблизний часс доставки: </b><span class="delivery-time">Невідомий</span>
                        <br />
                        <b>Адреса доставки: </b><span class="delivery-address">Невідома</span>
                    </div>
                </div>
            </div>

        </div> <!-- form-container-->
        <div class="google-maps" id="googleMap" style="position: relative;overflow: hidden;">

    </div> <!-- left-panel -->
    <div class="right-panel">
        <div class="top-panel-row">
            <span class="orders-count-label">
                Замовлення
            </span> <span class="pizza-count-badge" id="number_of_pizza">0</span>
            <span class="clear-order-label">
                Очистити замовлення
            </span>
        </div>
        <div class="main-panel-row" id="cart">
            <div class="no-order-text">
                Пусто в холодильнику?<br/ >
                Замовте піцу!
            </div>
        </div>
        <div class="bottom-panel-row">
            <h4 class="order-sum"></h4>
            <a type="button" href="index.html" class="btn btn-default btn-block">
                Редагувати замовлення
            </a>
        </div>
    </div>
</div>

<% include common/footer.ejs %>